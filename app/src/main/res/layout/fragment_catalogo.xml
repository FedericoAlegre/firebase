<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogoFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvCatalogo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Populares" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/populares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCatalogo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estrenos" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/estrenos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCatalogo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas Peliculas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/masPeliculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>